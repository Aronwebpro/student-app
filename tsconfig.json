{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es7"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ]
}
